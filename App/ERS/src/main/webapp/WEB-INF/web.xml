<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ERS</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>FrontController</display-name>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>com.revature.web.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern></url-pattern>
    <url-pattern>/login</url-pattern>
    <url-pattern>/logout</url-pattern>
    <url-pattern>/home</url-pattern>
    <url-pattern>/Manager</url-pattern>
    <url-pattern>/Employee</url-pattern>
    <url-pattern>/AllReimbursements</url-pattern>
    <url-pattern>/GetAllReimbursementsOfAGivenType/*</url-pattern>
    <url-pattern>*.ReimbursementApproved</url-pattern>
    <url-pattern>*.ReimbursementUnapproved</url-pattern>
    <url-pattern>/PastReimbursement</url-pattern>
    <url-pattern>/NewReimbursementForm</url-pattern>
    <url-pattern>/PastReimbursementPage</url-pattern>
    <url-pattern>/DeleteReimbursement</url-pattern>
    <url-pattern>/SubmitReimbursement</url-pattern>
    <url-pattern>/Reimbursements</url-pattern>
    <url-pattern>/FindAnEmployee</url-pattern>
    <url-pattern>/Profile</url-pattern>
    <url-pattern>/GetEmployeeById/*</url-pattern>
    <url-pattern>/GetAllEmployees</url-pattern>
    <url-pattern>/GetAllTheReimbursementsOfEmployeeWithId/*</url-pattern>
    <url-pattern>/UpdateProfile</url-pattern>
  </servlet-mapping>
</web-app>